<%- include('./partials/header.ejs') %> 

<body>
  <%- include('./partials/navbar.ejs') %> 

  <div class="container">


    <div class="card">
      <div class="card-header">
        <h1>
          <%= pergunta.titulo %>
        </h1>
        
      </div>
      <div class="card-body">
        <p>
          <%= pergunta.descricao %>
        </p>
      </div>
    </div>
    <br>
    <div class="card">
      <form action="/responder" method="POST">
        <div class="card-header">
          <h3>Responda</h3>
        </div>
        <div class="card-body">
          <label for="">Resposta:</label>
          <textarea placeholder="Digite sua resposta" class="form-control" name="corpo"></textarea><br>
          <input type="hidden" name="pergunta" value="<%= pergunta.id %>"> <!--Campo de tipo escondido-->
          <button class="btn btn-primary">Responder</button>
        </div>
      </form>
    </div>
    <br>

    <div class="card">
      <div class="card-header">
        <h3>Respostas</h3>
      </div>
      <div class="card-body">
        <% respostas.forEach(resposta => { %> 
          <br>
          <div class="card">
            <div class="card-body">
              <%= resposta.corpo %> <br>
            </div>
          </div>
        <% }) %> 
      </div>
    </div>    
  </div>

</body>

<%- include('./partials/footer.ejs') %> 